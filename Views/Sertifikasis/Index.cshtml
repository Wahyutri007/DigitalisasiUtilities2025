@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(function () {
            const $ajaxModal = $('#ajax-modal');
            const $modalBody = $ajaxModal.find('.modal-body');
            const $modalTitle = $ajaxModal.find('.modal-title');

            const params = new URLSearchParams(window.location.search);
            const employeeId = params.get('employeeId');
            if (employeeId) {
                $('select[name="employeeId"]').val(employeeId);
            }

            if ($('select[name="employeeId"]').length) {
                $('select[name="employeeId"]').select2({
                    theme: 'bootstrap-5'
                });
            }

            const lang = {
                search: "Cari:",
                lengthMenu: "Tampil _MENU_ baris",
                info: "Menampilkan _START_–_END_ dari _TOTAL_ data",
                infoEmpty: "Tidak ada data",
                zeroRecords: "Tidak ditemukan data yang cocok",
                paginate: { first: "<<", last: ">>", next: ">", previous: "<" }
            };

            const domLayout =
                "<'row g-2 mb-2'<'col-sm-12 col-md-6'l><'col-sm-12 col-md-6'f>>" +
                "<'row'<'col-sm-12'tr>>" +
                "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 d-flex justify-content-end'p>>";

            // RINGKASAN
            let ringkasanTable = null;
            if ($('#tbl-ringkasan').length) {
                ringkasanTable = $('#tbl-ringkasan').DataTable({
                    responsive: true,
                    dom: domLayout,
                    order: [[1, 'asc']],
                    pageLength: 10,
                    lengthMenu: [10, 25, 50, 100],
                    language: lang,
                    columnDefs: [
                        { targets: [0, 6], orderable: false, searchable: false }
                    ]
                });

                ringkasanTable.on('draw.dt', function () {
                    const info = ringkasanTable.page.info();
                    ringkasanTable.column(0, { search: 'applied', order: 'applied' })
                        .nodes()
                        .each(function (cell, i) {
                            cell.innerHTML = info.start + i + 1;
                        });
                }).draw();
            }

            // DETAIL
            let detailTable = null;
            if ($('#tbl-detail').length) {
                const columnDefsDetail = @Html.Raw(
                                                                    showActions
                                                                                    ? "[{ targets: 0, orderable: false, searchable: false }, { targets: -1, orderable: false, searchable: false }]"
                                                                                    : "[{ targets: 0, orderable: false, searchable: false }]"
                                                    );

            detailTable = $('#tbl-detail').DataTable({
                responsive: true,
                dom: domLayout,
                order: [[4, 'desc']],
                pageLength: 25,
                lengthMenu: [10, 25, 50, 100],
                language: lang,
                columnDefs: columnDefsDetail
            });

                detailTable.on('draw.dt', function () {
                    const info = detailTable.page.info();
                    detailTable.column(0, { search: 'applied', order: 'applied' })
                        .nodes()
                        .each(function (cell, i) {
                            cell.innerHTML = info.start + i + 1;
                        });
                }).draw();
            }

            // OPEN MODAL CREATE
            $('#btn-create-modal').on('click', function () {
                const empId = $(this).data('employee-id') || '';
                $modalTitle.text('Input Data Sertifikasi');

                $modalBody.html("<div class='py-4 text-center text-muted small'>Memuat formulir…</div>");
                $modalBody.load('@Url.Action("Create")?employeeId=' + empId, function () {
                    $ajaxModal.modal('show');
                });
            });

            // IMPORT
            $('#btn-import-modal').on('click', function () {
                $modalTitle.text('Import Data Sertifikasi');
                $modalBody.html("<div class='py-4 text-center text-muted small'>Memuat formulir…</div>");
                $modalBody.load('@Url.Action("Import")', function () {
                    $ajaxModal.modal('show');
                });
            });

            // DETAIL (popup)
            $('body').on('click', '.btn-detail', function () {
                const id = $(this).data('id');
                $modalTitle.text('Detail Sertifikasi');
                $modalBody.html("<div class='py-4 text-center text-muted small'>Memuat data…</div>");
                $modalBody.load('@Url.Action("Details")/' + id, function () {
                    $ajaxModal.modal('show');
                });
            });

            // EDIT (popup)
            $('body').on('click', '.btn-edit', function () {
                const id = $(this).data('id');
                $modalTitle.text('Edit Data Sertifikasi');
                $modalBody.html("<div class='py-4 text-center text-muted small'>Memuat formulir…</div>");
                $modalBody.load('@Url.Action("Edit")/' + id, function () {
                    $ajaxModal.modal('show');
                });
            });

            // SUBMIT CREATE/EDIT
            $('body').on('submit', '#ajax-form', function (e) {
                e.preventDefault();
                const $form = $(this);

                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: $form.serialize(),
                    success: function (response) {
                        if (response && response.success) {
                            $ajaxModal.modal('hide');
                            Swal.fire('Berhasil', response.message, 'success')
                                .then(() => window.location.reload());
                        } else if (response) {
                            let errorMsg = (response.message || 'Data tidak valid.') + "<ul class='text-start mt-2'>";
                            (response.errors || []).forEach(err => {
                                errorMsg += `<li>${err}</li>`;
                            });
                            errorMsg += "</ul>";
                            Swal.fire({ title: 'Gagal', html: errorMsg, icon: 'error' });
                        } else {
                            Swal.fire('Error', 'Respon server tidak dikenal.', 'error');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'Terjadi kesalahan server.', 'error');
                    }
                });
            });

            // SUBMIT IMPORT
            $('body').on('submit', '#import-form', function (e) {
                e.preventDefault();

                const $form = $(this);
                const token =
                    $form.find('input[name="__RequestVerificationToken"]').val()
                    || $('#token-form').find('input[name="__RequestVerificationToken"]').val();

                const formData = new FormData(this);

                $.ajax({
                    url: $form.attr('action'),
                    type: $form.attr('method') || 'POST',
                    data: formData,
                    processData: false,
                    contentType: false,
                    headers: token ? { 'RequestVerificationToken': token } : {},
                    success: function (res) {
                        if (res && res.success) {
                            $ajaxModal.modal('hide');
                            Swal.fire('Berhasil', res.message, 'success')
                                .then(() => window.location.reload());
                        } else if (res) {
                            let msg = res.message || 'Import gagal.';
                            if (res.errors && res.errors.length) {
                                msg += "<ul class='text-start mt-2'>";
                                res.errors.forEach(e => msg += `<li>${e}</li>`);
                                msg += "</ul>";
                            }
                            Swal.fire({ title: 'Gagal', html: msg, icon: 'error' });
                        } else {
                            Swal.fire('Error', 'Respon server tidak dikenal.', 'error');
                        }
                    },
                    error: function (xhr) {
                        let msg = 'Terjadi kesalahan server saat import.';
                        if (xhr.status === 400) {
                            msg = 'Request tidak valid atau token keamanan kadaluarsa. Silakan refresh halaman lalu coba import lagi.';
                        }
                        Swal.fire('Error', msg, 'error');
                    }
                });
            });

            // DELETE
            $('body').on('click', '.btn-delete', function (e) {
                e.preventDefault();
                const $button = $(this);
                const id = $button.data('id');
                const nama = $button.data('nama');
                const token = $('#token-form').find('input[name="__RequestVerificationToken"]').val();

                Swal.fire({
                    title: 'Anda yakin?',
                    text: `Data sertifikasi "${nama}" akan dihapus permanen.`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    cancelButtonText: 'Batal',
                    confirmButtonText: 'Ya, hapus!'
                }).then((result) => {
                    if (!result.isConfirmed) return;

                    $.ajax({
                        url: '@Url.Action("Delete")/' + id,
                        type: 'POST',
                        data: {
                            "__RequestVerificationToken": token,
                            "id": id
                        },
                        success: function (response) {
                            if (response && response.success) {
                                Swal.fire('Dihapus!', response.message, 'success');
                                if (detailTable) {
                                    detailTable.row($button.closest('tr')).remove().draw();
                                } else if (ringkasanTable) {
                                    ringkasanTable.row($button.closest('tr')).remove().draw();
                                } else {
                                    window.location.reload();
                                }
                            } else {
                                Swal.fire('Gagal!', response.message || 'Gagal menghapus data.', 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('Error', 'Terjadi kesalahan server.', 'error');
                        }
                    });
                });
            });
        });
    </script>
}
