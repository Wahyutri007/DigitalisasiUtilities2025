@* ================== TABEL RINGKASAN / DETAIL ================== *@
@if (!isDetailMode)
{
    <!-- RINGKASAN PER PEKERJA -->
    <div class="sertif-table-wrapper">
        <div class="table-responsive">
            <table id="tbl-ringkasan" class="table sertif-table align-middle w-100">
                <thead>
                    <tr>
                        <th class="text-center" style="width:40px;">No</th>
                        <th>Nama</th>
                        <th>Nopeg</th>
                        <th class="text-center">Jumlah Diambil</th>
                        <th class="text-center">Sudah Expired</th>
                        <th class="text-center">Masih Berlaku</th>
                        <th class="text-center" data-priority="1">Detail</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in grouped)
                    {
                        <tr>
                            <td class="text-center"></td>
                            <td>@r.Nama</td>
                            <td>@r.Nopeg</td>
                            <td class="text-center">@r.Total</td>
                            <td class="text-center">@r.Expired</td>
                            <td class="text-center">@r.Aktif</td>
                            <td class="text-center text-nowrap">
                                <div class="table-actions">
                                    <a class="table-action-btn table-action-view"
                                       asp-action="Index"
                                       asp-route-employeeId="@r.EmployeeId"
                                       asp-route-q="@q"
                                       title="Lihat Detail Sertifikasi">
                                        <i class="bi bi-search"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <!-- DETAIL PER SERTIFIKASI -->
    <div class="sertif-table-wrapper">
        <div class="table-responsive">
            <table id="tbl-detail" class="table sertif-table align-middle w-100">
                <thead>
                    <tr>
                        <th class="text-center" style="width:40px;">No</th>
                        <th>Nama</th>
                        <th>Nopeg</th>
                        <th>Sertifikasi</th>
                        <th>Periode</th>
                        <th class="text-center">Status</th>
                        <th>Lokasi</th>
                        <th>Keterangan</th>
                        @if (showActions)
                        {
                            <th class="text-center" data-priority="1" style="width:140px;">Aksi</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in src)
                    {
                        var canEditRow = canManageSertifikasi || (currentEmployeeId > 0 && s.EmployeeId == currentEmployeeId);

                        <tr data-id="@s.Id">
                            <td class="text-center"></td>
                            <td>@s.Employee?.NamaLengkap</td>
                            <td>@s.Employee?.NopegPersero</td>
                            <td>@(s.MasterSertifikasi?.Nama ?? s.NamaSertifikasi)</td>
                            <td>@s.BerlakuDari?.ToString("yyyy-MM-dd") – @s.BerlakuSampai?.ToString("yyyy-MM-dd")</td>
                            <td class="text-center">
                                @if (s.IsExpired)
                                {
                                    <span class="badge bg-danger">Expired</span>
                                }
                                else
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                            </td>
                            <td>@s.Lokasi</td>
                            <td>@s.Keterangan</td>

                            @if (showActions)
                            {
                                <td class="text-center text-nowrap">
                                    @if (canEditRow)
                                    {
                                        <div class="table-actions">
                                            <!-- DETAIL (modal) -->
                                            <button type="button"
                                                    class="table-action-btn table-action-view btn-detail"
                                                    data-id="@s.Id"
                                                    title="Detail">
                                                <i class="bi bi-info-circle"></i>
                                            </button>

                                            <!-- EDIT (modal) -->
                                            <button type="button"
                                                    class="table-action-btn table-action-edit btn-edit"
                                                    data-id="@s.Id"
                                                    title="Edit">
                                                <i class="bi bi-pencil-square"></i>
                                            </button>

                                            @if (canManageSertifikasi)
                                            {
                                                <!-- DELETE (ajax) -->
                                                <button type="button"
                                                        class="table-action-btn table-action-delete btn-delete"
                                                        data-id="@s.Id"
                                                        data-nama="@(s.MasterSertifikasi?.Nama ?? s.NamaSertifikasi)"
                                                        title="Hapus">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    }
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

