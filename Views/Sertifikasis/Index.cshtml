@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<UtilitiesHR.Models.Sertifikasi>
@using UtilitiesHR.Models
@using System.Linq

@{
    ViewData["Title"] = "Sertifikasi Pekerja";

    var employeeId = Context.Request.Query["employeeId"].ToString();
    var q = Context.Request.Query["q"].ToString();

    var src = Model ?? Enumerable.Empty<Sertifikasi>();

    var canManageSertifikasi = User.IsInRole("Admin")
        || User.IsInRole("SuperAdmin")
        || User.IsInRole("Supervisor");

    var currentEmployeeId = ViewBag.CurrentEmployeeId as long? ?? 0L;
    var currentEmployeeName = ViewBag.CurrentEmployeeName as string ?? "";

    var grouped = src
        .GroupBy(s => new
        {
            s.EmployeeId,
            Nama = s.Employee?.NamaLengkap ?? "(tanpa nama)",
            Nopeg = s.Employee?.NopegPersero ?? "-"
        })
        .Select(g => new
        {
            g.Key.EmployeeId,
            g.Key.Nama,
            g.Key.Nopeg,
            Total = g.Count(),
            Expired = g.Count(x => x.IsExpired),
            Aktif = g.Count(x => !x.IsExpired)
        })
        .OrderBy(x => x.Nama)
        .ToList();

    bool isDetailMode = !string.IsNullOrWhiteSpace(employeeId);
    var showActions = canManageSertifikasi || currentEmployeeId > 0;

    // KPI SUMMARY (berdasarkan data yang sudah ter-filter di controller)
    var totalSertifikasi = src.Count();
    var totalAktif = src.Count(s => !s.IsExpired);
    var totalExpired = src.Count(s => s.IsExpired);
}

