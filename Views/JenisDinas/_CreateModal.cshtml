@model UtilitiesHR.Models.JenisDinas
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<form id="ajax-form" asp-action="Create" asp-controller="JenisDinas" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Nama" class="form-label">Nama Jenis Dinas</label>
        <input asp-for="Nama" class="form-control" />
        <span asp-validation-for="Nama" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Keterangan" class="form-label">Keterangan (opsional)</label>
        <textarea asp-for="Keterangan" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Keterangan" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Simpan
        </button>
        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
            Batal
        </button>
    </div>
</form>

<script>
    // apply unobtrusive validation jika perlu
    $.validator && $.validator.unobtrusive && $.validator.unobtrusive.parse('#ajax-form');
</script>
