@model UtilitiesHR.ViewModels.EmployeeDetailVm

@{
    ViewData["Title"] = "Detail Pekerja";
    var e = Model.Employee;
}

<h1 class="mb-1">Detail Pekerja</h1>
<p class="text-muted small mb-3">
    Informasi lengkap pekerja dan ringkasan Dinas / Cuti / Sertifikasi.
</p>

<div class="row g-3 mb-3">
    <div class="col-md-4 col-12">
        <div class="p-3 rounded-3 border bg-light h-100">
            <div class="small text-muted">Total Dinas</div>
            <div class="fs-4 fw-semibold">@Model.TotalDinas</div>
        </div>
    </div>
    <div class="col-md-4 col-12">
        <div class="p-3 rounded-3 border bg-light h-100">
            <div class="small text-muted">Total Cuti</div>
            <div class="fs-4 fw-semibold">@Model.TotalCuti</div>
        </div>
    </div>
    <div class="col-md-4 col-12">
        <div class="p-3 rounded-3 border bg-light h-100">
            <div class="small text-muted">Total Sertifikasi</div>
            <div class="fs-4 fw-semibold">@Model.TotalSertifikasi</div>
        </div>
    </div>
</div>

<div class="row g-3">
    <div class="col-lg-6 col-12">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <strong>Identitas</strong>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-4 small text-muted">Nama Lengkap</dt>
                    <dd class="col-8">@e.NamaLengkap</dd>

                    <dt class="col-4 small text-muted">Nopeg Persero</dt>
                    <dd class="col-8">@e.NopegPersero</dd>

                    <dt class="col-4 small text-muted">Jabatan</dt>
                    <dd class="col-8">@e.Jabatan</dd>

                    <dt class="col-4 small text-muted">Jenis Kelamin</dt>
                    <dd class="col-8">@e.JenisKelamin</dd>

                    <dt class="col-4 small text-muted">Tempat / Tgl Lahir</dt>
                    <dd class="col-8">
                        @e.TempatLahir
                        @if (e.TanggalLahir.HasValue)
                        {
                            <span> @e.TanggalLahir.Value.ToString("dd MMM yyyy") (@e.Usia th)</span>
                        }
                    </dd>

                    <dt class="col-4 small text-muted">Status Pernikahan</dt>
                    <dd class="col-8">@e.StatusPernikahan</dd>

                    <dt class="col-4 small text-muted">Nama Suami/Istri</dt>
                    <dd class="col-8">@e.NamaSuamiIstri</dd>

                    <dt class="col-4 small text-muted">Jumlah Anak</dt>
                    <dd class="col-8">@e.JumlahAnak</dd>

                    <dt class="col-4 small text-muted">Alamat Domisili</dt>
                    <dd class="col-8">@e.AlamatDomisili</dd>
                </dl>
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <strong>Pendidikan &amp; Ukuran</strong>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-4 small text-muted">Pendidikan</dt>
                    <dd class="col-8">@e.PendidikanTerakhir</dd>

                    <dt class="col-4 small text-muted">Jurusan</dt>
                    <dd class="col-8">@e.Jurusan</dd>

                    <dt class="col-4 small text-muted">Institusi</dt>
                    <dd class="col-8">@e.Institusi</dd>

                    <dt class="col-4 small text-muted">Uk Wearpack</dt>
                    <dd class="col-8">@e.UkWearpack</dd>

                    <dt class="col-4 small text-muted">Uk Kemeja Putih</dt>
                    <dd class="col-8">@e.UkKemejaPutih</dd>

                    <dt class="col-4 small text-muted">Uk Kemeja Produk</dt>
                    <dd class="col-8">@e.UkKemejaProduk</dd>

                    <dt class="col-4 small text-muted">Uk Sepatu Safety</dt>
                    <dd class="col-8">@e.UkSepatuSafety</dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-lg-6 col-12">
        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <strong>Kepegawaian</strong>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-4 small text-muted">Tanggal MPPK</dt>
                    <dd class="col-8">@e.TanggalMPPK?.ToString("dd MMM yyyy")</dd>

                    <dt class="col-4 small text-muted">Tanggal Pensiun</dt>
                    <dd class="col-8">@e.TanggalPensiun?.ToString("dd MMM yyyy")</dd>

                    <dt class="col-4 small text-muted">Intake Pertama</dt>
                    <dd class="col-8">
                        @if (!string.IsNullOrWhiteSpace(e.IntakePertama))
                        {
                            @e.IntakePertama
                        }
                    </dd>

                    <dt class="col-4 small text-muted">Intake Aktif</dt>
                    <dd class="col-8">
                        @e.IntakeAktif?.ToString("dd MMM yyyy")
                        @if (e.MasaKerjaTahun > 0)
                        {
                            <span> (@e.MasaKerjaTahun th)</span>
                        }
                    </dd>

                    <dt class="col-4 small text-muted">Clustering Intake</dt>
                    <dd class="col-8">@e.ClusteringIntake</dd>

                    <dt class="col-4 small text-muted">Limit Cuti</dt>
                    <dd class="col-8">@e.CutiLimit</dd>
                </dl>
            </div>
        </div>

        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white">
                <strong>Kontak</strong>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-4 small text-muted">Email Pertamina</dt>
                    <dd class="col-8">@e.EmailPertamina</dd>

                    <dt class="col-4 small text-muted">Nomor HP</dt>
                    <dd class="col-8">@e.NomorHP</dd>

                    <dt class="col-4 small text-muted">Telepon Rumah</dt>
                    <dd class="col-8">@e.NomorTeleponRumah</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
        <i class="bi bi-arrow-left"></i> Kembali ke daftar
    </a>
</div>
