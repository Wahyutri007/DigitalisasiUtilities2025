@model UtilitiesHR.Models.Employee
@{
    ViewData["Title"] = "Hapus Pekerja";
}
<h3>Hapus Pekerja</h3>
<p>Anda yakin ingin menghapus <b>@Model.NamaLengkap</b> (@Model.NopegPersero)?</p>
<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button class="btn btn-danger">Hapus</button>
    <a class="btn btn-outline-secondary" href="/Employees">Batal</a>
</form>