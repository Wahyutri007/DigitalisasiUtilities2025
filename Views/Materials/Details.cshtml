@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model UtilitiesHR.Models.MaterialDetailsVM

@{
    ViewData["Title"] = "Detail Material - " + Model.NamaBarang;
    ViewData["Breadcrumb"] = "Detail Material";

    var start = ViewBag.StartDate as string;
    var end = ViewBag.EndDate as string;

    // ===== DATA UNTUK CHART (group per BULAN) =====
    var grouped = Model.Txns
        .GroupBy(t => new { t.Tanggal.Year, t.Tanggal.Month })
        .OrderBy(g => g.Key.Year)
        .ThenBy(g => g.Key.Month)
        .Select(g => new
        {
            Label = g.Key.Month.ToString("00") + "/" + g.Key.Year, // contoh: 01/2025
            Masuk = g.Where(x => x.Jenis == UtilitiesHR.Models.JenisTransaksi.Masuk).Sum(x => x.Jumlah),
            Keluar = g.Where(x => x.Jenis == UtilitiesHR.Models.JenisTransaksi.Keluar).Sum(x => x.Jumlah)
        })
        .ToList();

    var chartJson = System.Text.Json.JsonSerializer.Serialize(grouped);
}

