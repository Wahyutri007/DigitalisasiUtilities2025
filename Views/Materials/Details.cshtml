@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <!-- Chart.js untuk grafik -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        $(function () {
            const $ajaxModal = $('#ajax-modal');
            const $modalBody = $ajaxModal.find('.modal-body');
            const $modalTitle = $ajaxModal.find('.modal-title');

            function initSelect2() {
                const selects = $modalBody.find('.select2-modal');
                if (!selects.length) return;
                selects.each(function () {
                    const $s = $(this);
                    if ($s.data('select2')) $s.select2('destroy');
                    $s.select2({
                        theme: "bootstrap-5",
                        dropdownParent: $ajaxModal.find('.modal-content'),
                        tags: true
                    });
                });
            }

            // ====== CHART BARANG MASUK & KELUAR PER BULAN ======
            const chartData = @Html.Raw(chartJson);
            if (chartData && chartData.length) {
                const labels = chartData.map(x => x.Label);
                const masuk = chartData.map(x => x.Masuk);
                const keluar = chartData.map(x => x.Keluar);

                const ctx = document.getElementById('txnChart');
                if (ctx) {
                    new Chart(ctx, {
                        type: 'bar',
                        data: {
                            labels: labels,
                            datasets: [
                                {
                                    label: 'Masuk',
                                    data: masuk,
                                    backgroundColor: '#3b82f6',
                                    hoverBackgroundColor: '#2563eb',
                                    borderWidth: 0,
                                    borderRadius: 14,
                                    borderSkipped: false,
                                    maxBarThickness: 40
                                },
                                {
                                    label: 'Keluar',
                                    data: keluar,
                                    backgroundColor: '#fb7185',
                                    hoverBackgroundColor: '#f97373',
                                    borderWidth: 0,
                                    borderRadius: 14,
                                    borderSkipped: false,
                                    maxBarThickness: 40
                                }
                            ]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: {
                                    position: 'top',
                                    labels: {
                                        usePointStyle: true,
                                        boxWidth: 10,
                                        boxHeight: 10,
                                        padding: 16
                                    }
                                },
                                tooltip: {
                                    callbacks: {
                                        label: function (ctx) {
                                            const v = ctx.parsed.y || 0;
                                            return ctx.dataset.label + ': ' +
                                                v.toLocaleString('id-ID');
                                        }
                                    }
                                }
                            },
                            scales: {
                                x: {
                                    grid: {
                                        display: false
                                    }
                                },
                                y: {
                                    beginAtZero: true,
                                    grid: {
                                        color: 'rgba(148,163,184,.35)',
                                        drawBorder: false
                                    },
                                    ticks: {
                                        callback: function (value) {
                                            return value.toLocaleString('id-ID');
                                        }
                                    }
                                }
                            }
                        }
                    });
                }
            }

            // ====== DataTables transaksi ======
            const table = $('#tbl-txns').DataTable({
                responsive: true,
                dom:
                    "<'row g-2 mb-3'<'col-6 col-md-4'l><'col-6 col-md-4 offset-md-4'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row'<'col-sm-12 col-md-5'i><'col-sm-12 col-md-7 d-flex justify-content-end'p>>",
                order: [[2, 'asc']], // urut Tanggal (kolom index 2)
                pageLength: 25,
                lengthMenu: [10, 25, 50, 100],
                language: {
                    search: 'Cari:',
                    lengthMenu: '_MENU_ baris',
                    info: '_START_–_END_ dari _TOTAL_',
                    infoEmpty: 'Tidak ada data',
                    zeroRecords: 'Tidak ditemukan',
                    paginate: {
                        first: '<<',
                        last: '>>',
                        next: '>',
                        previous: '<'
                    }
                },
                columnDefs: [
                    { targets: 0, orderable: false, searchable: false }, // No
                    { targets: 1, orderable: false, searchable: false }, // checkbox
                    { targets: 8, orderable: false, searchable: false }  // aksi
                ]
            });

            // Penomoran kolom No
            table.on('draw.dt', function () {
                const info = table.page.info();
                table.column(0, { search: 'applied', order: 'applied' })
                    .nodes()
                    .each(function (cell, i) {
                        cell.innerHTML = info.start + i + 1;
                    });
            }).draw();

            function buildExportUrl(actionName) {
                let url = '@Url.Action("__dummy__", "Materials", new { id = Model.Id })'
                    .replace('__dummy__', actionName);

                const start = $('#filter-start').val();
                const end = $('#filter-end').val();
                const params = [];
                if (start) params.push('startDate=' + encodeURIComponent(start));
                if (end) params.push('endDate=' + encodeURIComponent(end));
                if (params.length > 0) {
                    url += (url.indexOf('?') >= 0 ? '&' : '?') + params.join('&');
                }
                return url;
            }

            // ====== EXPORT (dropdown di header) ======
            $('#btn-export-xlsx-header').on('click', function () {
                window.location = buildExportUrl('ExportTransactions');
            });

            $('#btn-export-csv-header').on('click', function () {
                window.location = buildExportUrl('ExportTransactionsCsv');
            });

            // ====== Barang Masuk ======
            $('#btn-barang-masuk').on('click', function () {
                $modalTitle.text('Barang Masuk');
                $modalBody.html("<div class='text-center py-4 text-muted small'>Memuat formulir…</div>");
                $modalBody.load('@Url.Action("TxnCreate", "Materials")?materialId=@Model.Id&jenis=1',
                    function (res, status) {
                        if (status === 'error') {
                            $modalBody.html("<div class='alert alert-danger mb-0'>Gagal memuat form.</div>");
                        }
                        initSelect2();
                        $ajaxModal.modal('show');
                    });
            });

            // ====== Barang Keluar ======
            $('#btn-barang-keluar').on('click', function () {
                $modalTitle.text('Barang Keluar');
                $modalBody.html("<div class='text-center py-4 text-muted small'>Memuat formulir…</div>");
                $modalBody.load('@Url.Action("TxnCreate", "Materials")?materialId=@Model.Id&jenis=2',
                    function (res, status) {
                        if (status === 'error') {
                            $modalBody.html("<div class='alert alert-danger mb-0'>Gagal memuat form.</div>");
                        }
                        initSelect2();
                        $ajaxModal.modal('show');
                    });
            });

            // ====== Edit Material ======
            $('#btn-edit-material').on('click', function () {
                $modalTitle.text('Edit Material');
                $modalBody.html("<div class='text-center py-4 text-muted small'>Memuat formulir…</div>");
                $modalBody.load('@Url.Action("Edit", "Materials")?id=@Model.Id',
                    function (res, status) {
                        if (status === 'error') {
                            $modalBody.html("<div class='alert alert-danger mb-0'>Gagal memuat form.</div>");
                        } else {
                            initSelect2();
                        }
                        $ajaxModal.modal('show');
                    });
            });

            // ====== Edit Transaksi ======
            $('#tbl-txns').on('click', '.btn-edit-txn', function () {
                const id = $(this).data('id');
                $modalTitle.text('Edit Transaksi');
                $modalBody.html("<div class='text-center py-4 text-muted small'>Memuat formulir…</div>");
                $modalBody.load('@Url.Action("EditTxn", "Materials")?id=' + id,
                    function (res, status) {
                        if (status === 'error') {
                            $modalBody.html("<div class='alert alert-danger mb-0'>Gagal memuat form.</div>");
                        }
                        $ajaxModal.modal('show');
                    });
            });

            // ====== Submit form dalam modal (Create/Edit) ======
            $('body').on('submit', '#ajax-form', function (e) {
                e.preventDefault();
                const $form = $(this);

                $.ajax({
                    url: $form.attr('action'),
                    type: 'POST',
                    data: $form.serialize(),
                    success: function (res) {
                        if (res && res.success === true) {
                            $ajaxModal.modal('hide');
                            Swal.fire('Berhasil', res.message, 'success')
                                .then(() => location.reload());
                        } else if (res && res.success === false) {
                            Swal.fire('Gagal', res.message, 'error');
                        } else {
                            $modalBody.html(res);
                            initSelect2();
                            $.validator.unobtrusive.parse('#ajax-form');
                        }
                    },
                    error: function () {
                        Swal.fire('Error', 'Terjadi kesalahan server.', 'error');
                    }
                });
            });

            // ====== Hapus transaksi tunggal ======
            $('#tbl-txns').on('click', '.btn-delete-txn', function () {
                const id = $(this).data('id');
                Swal.fire({
                    title: 'Hapus transaksi?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    confirmButtonText: 'Ya, hapus',
                    cancelButtonText: 'Batal'
                }).then(r => {
                    if (!r.isConfirmed) return;

                    $.post('@Url.Action("DeleteTxn", "Materials")/' + id, {
                        "__RequestVerificationToken":
                            $('input[name="__RequestVerificationToken"]').val()
                    })
                        .done(res => {
                            if (res.success) {
                                Swal.fire('Berhasil', res.message, 'success')
                                    .then(() => location.reload());
                            } else {
                                Swal.fire('Gagal', res.message, 'error');
                            }
                        })
                        .fail(() => {
                            Swal.fire('Error', 'Terjadi kesalahan server.', 'error');
                        });
                });
            });

            // ====== Bulk delete ======
            const $btnBulk = $('#btn-bulk-delete-txn');
            const $checkAll = $('#check-all-txn');

            function toggleBulkButton() {
                const any = $('.check-txn-item:checked').length > 0;
                $btnBulk.toggle(any);
            }

            $checkAll.on('change', function () {
                const checked = this.checked;
                $('.check-txn-item').prop('checked', checked);
                toggleBulkButton();
            });

            $('#tbl-txns').on('change', '.check-txn-item', function () {
                const all = $('.check-txn-item').length === $('.check-txn-item:checked').length;
                $checkAll.prop('checked', all);
                toggleBulkButton();
            });

            $btnBulk.on('click', function () {
                const ids = $('.check-txn-item:checked')
                    .map(function () { return $(this).data('id'); })
                    .get();

                if (!ids.length) {
                    Swal.fire('Info', 'Pilih transaksi terlebih dahulu.', 'info');
                    return;
                }

                Swal.fire({
                    title: `Hapus ${ids.length} transaksi?`,
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#d33',
                    confirmButtonText: 'Ya, hapus',
                    cancelButtonText: 'Batal'
                }).then(r => {
                    if (!r.isConfirmed) return;

                    $.ajax({
                        url: '@Url.Action("DeleteTxnBulk", "Materials")',
                        type: 'POST',
                        contentType: 'application/json',
                        data: JSON.stringify(ids),
                        headers: {
                            'RequestVerificationToken':
                                $('input[name="__RequestVerificationToken"]').val()
                        },
                        success: function (res) {
                            if (res.success) {
                                Swal.fire('Berhasil', res.message, 'success')
                                    .then(() => location.reload());
                            } else {
                                Swal.fire('Gagal', res.message, 'error');
                            }
                        },
                        error: function () {
                            Swal.fire('Error', 'Terjadi kesalahan server.', 'error');
                        }
                    });
                });
            });
        });
    </script>
}
