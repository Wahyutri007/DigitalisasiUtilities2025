@model UtilitiesHR.Controllers.AccountController.ChangePasswordFirstTimeVM
@{
    ViewData["Title"] = "Ganti Password Pertama Kali";
    Layout = "_Layout";
}

<!-- ================================================ -->
<!--  MODAL WAJIB GANTI PASSWORD (STYLE LOGIN, 2 KOLOM) -->
<!-- ================================================ -->

<style>
    /* ==================== THEME TOKENS ==================== */
    :root {
        --brand-red: #e31e24;
        --brand-blue: #0f7bd9;
        --primary: var(--brand-blue);
        --danger: var(--brand-red);
        --ink: #0f172a;
        --muted: #667085;
        --line: #e5e9f2;
        --bg: #ffffff;
        --soft: #f6f8fb;
        --primary-soft: #eaf3ff;
        --radius-md: 14px;
        --radius-sm: 9px;
        --shadow: 0 10px 32px rgba(15, 23, 42, 0.15);
    }

    .force-change-modal .modal-dialog {
        max-width: 860px;
        margin: 1.5rem auto;
    }

    .force-change-modal .modal-content {
        border-radius: var(--radius-md) !important;
        border: 1px solid var(--line) !important;
        box-shadow: var(--shadow) !important;
        overflow: hidden;
        animation: slideUpFade 0.25s ease-out;
    }

    @@keyframes slideUpFade {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .force-change-modal .modal-header {
        background: linear-gradient(135deg, var(--brand-blue) 0%, #0a5db0 100%) !important;
        color: #fff !important;
        border-bottom: none !important;
        padding: 1rem 1.5rem !important;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: .75rem;
    }

    .force-change-modal .modal-title {
        font-weight: 700;
        font-size: 1.1rem;
        margin: 0;
        display: flex;
        align-items: center;
        gap: .5rem;
    }

    .force-change-modal .modal-subtitle {
        font-size: 0.8rem;
        opacity: 0.9;
        margin: 0.25rem 0 0 0;
        font-weight: 400;
    }

    .force-change-modal .modal-body {
        padding: 1.25rem 1.5rem 1.5rem !important;
        background: var(--bg);
    }

    .force-change-modal .content-row {
        display: flex;
        gap: 1.1rem;
        align-items: stretch;
    }

    .force-change-modal .col-form {
        flex: 1.4 1 0;
        min-width: 0;
        display: flex;
        flex-direction: column;
    }

    .force-change-modal .col-visual {
        flex: 1 1 0;
        min-width: 0;
        display: flex;
    }

    .force-change-modal .security-notice {
        background: var(--soft);
        border-radius: var(--radius-sm);
        padding: .8rem 1rem;
        margin-bottom: .75rem;
        border-left: 3px solid var(--primary);
    }

        .force-change-modal .security-notice h6 {
            color: var(--ink);
            font-weight: 600;
            margin-bottom: 0.35rem;
            font-size: 0.82rem;
            display: flex;
            align-items: center;
            gap: 0.4rem;
        }

        .force-change-modal .security-notice p {
            margin: 0;
            color: var(--muted);
            font-size: 0.75rem;
            line-height: 1.4;
        }

    .force-change-modal .default-password-alert {
        background: #fff3cd;
        border: 1px solid #ffeaa7;
        border-radius: var(--radius-sm);
        padding: 0.6rem .9rem;
        margin-bottom: .9rem;
        font-size: 0.78rem;
        color: #856404;
        display: flex;
        align-items: center;
        gap: 0.45rem;
    }

        .force-change-modal .default-password-alert i {
            color: #f39c12;
            font-size: 1rem;
        }

    .force-change-modal .form-label {
        font-weight: 600;
        color: var(--ink);
        margin-bottom: 0.35rem;
        font-size: 0.82rem;
        display: flex;
        align-items: center;
        gap: 0.35rem;
    }

        .force-change-modal .form-label::after {
            content: '*';
            color: var(--danger);
            margin-left: 2px;
        }

    .force-change-modal .form-control {
        border: 1px solid var(--line);
        border-radius: var(--radius-sm);
        font-size: 0.82rem;
        padding: 0.6rem 0.85rem;
        transition: all 0.2s ease;
        background: var(--bg);
        font-family: 'Poppins', sans-serif;
    }

        .force-change-modal .form-control:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 2px rgba(15, 123, 217, 0.12);
        }

    .force-change-modal .form-text {
        font-size: 0.74rem;
        color: var(--muted);
        margin-top: 0.4rem;
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .force-change-modal .password-form-grid {
        display: grid;
        gap: 0.7rem;
    }

    .force-change-modal .btn-primary {
        background: linear-gradient(135deg, var(--primary), #0a5db0);
        border: none;
        border-radius: var(--radius-sm);
        padding: 0.7rem 1.5rem;
        font-weight: 600;
        font-size: 0.85rem;
        transition: all 0.2s ease;
        font-family: 'Poppins', sans-serif;
        width: 100%;
        margin-top: 0.4rem;
    }

        .force-change-modal .btn-primary:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(15, 123, 217, 0.35);
        }

    .force-change-modal .btn-logout-header {
        border-radius: 999px;
        padding: 0.3rem 0.9rem;
        font-size: 0.78rem;
        border: 1px solid rgba(255,255,255,.8);
        background: rgba(15,23,42,0.08);
        color: #fff;
        display: inline-flex;
        align-items: center;
        gap: .35rem;
    }

        .force-change-modal .btn-logout-header:hover {
            background: rgba(15,23,42,0.15);
        }

    .force-change-modal .modal-footer {
        border-top: 1px solid var(--line);
        padding: 0.6rem 1.5rem !important;
        background: var(--soft);
        text-align: center;
    }

        .force-change-modal .modal-footer small {
            font-size: 0.72rem;
            color: var(--muted) !important;
        }

    .force-change-modal .password-strength {
        height: 4px;
        background: var(--line);
        border-radius: 2px;
        margin-top: 0.35rem;
        overflow: hidden;
    }

    .force-change-modal .password-strength-bar {
        height: 100%;
        width: 0%;
        transition: all 0.25s ease;
        border-radius: 2px;
    }

        .force-change-modal .password-strength-bar.weak {
            width: 33%;
            background: var(--danger);
        }

        .force-change-modal .password-strength-bar.medium {
            width: 66%;
            background: #ffc107;
        }

        .force-change-modal .password-strength-bar.strong {
            width: 100%;
            background: #198754;
        }

    .force-change-modal .is-valid {
        border-color: #198754 !important;
    }

    .force-change-modal .is-invalid {
        border-color: #dc3545 !important;
    }

    .force-change-modal .text-danger {
        font-size: 0.75rem;
    }

    .force-change-modal .password-wrapper {
        position: relative;
    }

    .force-change-modal .password-toggle {
        position: absolute;
        right: 8px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--muted);
        cursor: pointer;
        transition: all 0.2s ease;
        padding: 0.35rem;
        border-radius: var(--radius-sm);
        font-size: 0.8rem;
    }

        .force-change-modal .password-toggle:hover {
            color: var(--primary);
            background: var(--soft);
        }

    .force-change-modal .alert {
        padding: 0.6rem 0.9rem;
        font-size: 0.78rem;
        border-radius: var(--radius-sm);
        margin-bottom: .75rem;
        border: 1px solid;
    }

    .force-change-modal .alert-danger {
        background: #f8d7da;
        border-color: #f5c6cb;
        color: #721c24;
    }

    .force-change-modal .visual-card {
        border-radius: var(--radius-md);
        background-image: linear-gradient(135deg, rgba(15, 123, 217, 0.7) 0%, rgba(30, 41, 59, 0.9) 100%), url('https://png.pngtree.com/png-clipart/20230922/original/pngtree-flat-digital-background-depicting-privacy-and-cyber-security-concepts-illustrated-through-png-image_12724406.png');
        background-size: cover, contain;
        background-repeat: no-repeat, no-repeat;
        background-position: center, center;
        padding: 1.1rem 1rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
        text-align: center;
        min-height: 220px;
        width: 100%;
    }

    .force-change-modal .visual-icon {
        width: 48px;
        height: 48px;
        border-radius: 999px;
        background: rgba(255,255,255,.15);
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 0.7rem auto;
    }

        .force-change-modal .visual-icon i {
            font-size: 1.4rem;
        }

    .force-change-modal .visual-title {
        font-size: 0.95rem;
        font-weight: 700;
        margin-bottom: 0.4rem;
    }

    .force-change-modal .visual-text {
        font-size: 0.78rem;
        opacity: 0.96;
        line-height: 1.5;
    }

    @@media (max-width: 768px) {
        .force-change-modal .modal-dialog {
            max-width: 100%;
            margin: 1rem;
        }

        .force-change-modal .content-row {
            flex-direction: column;
        }

        .force-change-modal .visual-card {
            min-height: 160px;
            margin-top: .6rem;
        }
    }

    .force-change-modal .btn-loading {
        position: relative;
        color: transparent !important;
    }

        .force-change-modal .btn-loading::after {
            content: '';
            position: absolute;
            width: 16px;
            height: 16px;
            top: 50%;
            left: 50%;
            margin-left: -8px;
            margin-top: -8px;
            border: 2px solid transparent;
            border-radius: 50%;
            border-top: 2px solid #ffffff;
            animation: spin 0.8s linear infinite;
        }

    @@keyframes spin {
        0% {
            transform: rotate(0deg);
        }

        100% {
            transform: rotate(360deg);
        }
    }
</style>

<div class="modal fade force-change-modal"
     id="forceChangePasswordModal"
     tabindex="-1"
     aria-labelledby="forceChangePasswordLabel"
     aria-hidden="true"
     data-bs-backdrop="static"
     data-bs-keyboard="false">

    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Header -->
            <div class="modal-header">
                <div>
                    <h5 class="modal-title" id="forceChangePasswordLabel">
                        <i class="bi bi-shield-lock-fill"></i>
                        Ganti Password Wajib
                    </h5>
                    <p class="modal-subtitle">
                        Anda login menggunakan password default. Segera ganti untuk keamanan akun.
                    </p>
                </div>

                <!-- Tombol Logout -->
                <form asp-controller="Account"
                      asp-action="Logout"
                      method="post"
                      class="ms-auto">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-logout-header">
                        <i class="bi bi-box-arrow-right"></i>
                        Keluar
                    </button>
                </form>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <div class="content-row">
                    <!-- Kolom kiri: alert + form -->
                    <div class="col-form">
                        <div class="security-notice">
                            <h6><i class="bi bi-shield-check"></i>Kebijakan Keamanan</h6>
                            <p>Password default hanya boleh dipakai satu kali. Setelah diganti, gunakan password baru untuk login berikutnya.</p>
                        </div>

                        <div class="default-password-alert">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <span>Password default saat ini <strong>Pertamina@2025</strong>. Silakan diganti dengan password baru.</span>
                        </div>

                        <form asp-action="ChangePasswordFirstTime"
                              method="post"
                              id="changePwdForm">

                            @Html.AntiForgeryToken()

                            @* SUMMARY ERROR HANYA MUNCUL SETELAH POST *@
                            @if (ViewContext.HttpContext.Request.Method == "POST"
                                                        && !ViewData.ModelState.IsValid
                                                        && ViewData.ModelState.ErrorCount > 0)
                            {
                                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                            }

                            <div class="password-form-grid">
                                <div>
                                    <label class="form-label">
                                        <i class="bi bi-lock-fill"></i>Password Lama
                                    </label>
                                    <div class="password-wrapper">
                                        <input asp-for="OldPassword"
                                               class="form-control"
                                               type="password"
                                               placeholder="Masukkan password lama"
                                               required />
                                        <button type="button" class="password-toggle toggle-old-password">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>

                                <div>
                                    <label class="form-label">
                                        <i class="bi bi-key-fill"></i>Password Baru
                                    </label>
                                    <div class="password-wrapper">
                                        <input asp-for="NewPassword"
                                               class="form-control"
                                               type="password"
                                               placeholder="Masukkan password baru"
                                               required
                                               id="newPassword" />
                                        <button type="button" class="password-toggle toggle-new-password">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <div class="password-strength">
                                        <div class="password-strength-bar" id="passwordStrength"></div>
                                    </div>
                                    <div class="form-text">
                                        <i class="bi bi-info-circle"></i>
                                        Minimal 8 karakter, kombinasi huruf besar, kecil, angka & simbol.
                                    </div>
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>

                                <div>
                                    <label class="form-label">
                                        <i class="bi bi-key"></i>Konfirmasi Password Baru
                                    </label>
                                    <div class="password-wrapper">
                                        <input asp-for="ConfirmPassword"
                                               class="form-control"
                                               type="password"
                                               placeholder="Ulangi password baru"
                                               required />
                                        <button type="button" class="password-toggle toggle-confirm-password">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-primary" id="submitButton">
                                    <i class="bi bi-check-circle me-1"></i> Simpan Password Baru
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- Kolom kanan: kartu visual -->
                    <div class="col-visual">
                        <div class="visual-card">
                            <div class="visual-icon">
                                <i class="bi bi-key-fill"></i>
                            </div>
                            <div class="visual-title">Kunci Akses Anda</div>
                            <div class="visual-text">
                                Gunakan password yang unik dan sulit ditebak untuk menjaga
                                kerahasiaan data Utilities HR.
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <small>
                    <i class="bi bi-shield-check me-1"></i>
                    Utilities HR · PT Pertamina (Persero)
                </small>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var modalEl = document.getElementById('forceChangePasswordModal');
            var modal = new bootstrap.Modal(modalEl);
            modal.show();

            function setupPasswordToggle(toggleClass, inputSelector) {
                const toggle = document.querySelector(toggleClass);
                if (!toggle) return;

                toggle.addEventListener('click', function () {
                    const input = document.querySelector(inputSelector);
                    if (!input) return;

                    const icon = this.querySelector('i');
                    if (input.type === 'password') {
                        input.type = 'text';
                        icon.classList.remove('bi-eye');
                        icon.classList.add('bi-eye-slash');
                    } else {
                        input.type = 'password';
                        icon.classList.remove('bi-eye-slash');
                        icon.classList.add('bi-eye');
                    }
                });
            }

            setupPasswordToggle('.toggle-old-password', '[name="OldPassword"]');
            setupPasswordToggle('.toggle-new-password', '#newPassword');
            setupPasswordToggle('.toggle-confirm-password', '[name="ConfirmPassword"]');

            const newPasswordInput = document.getElementById('newPassword');
            if (newPasswordInput) {
                newPasswordInput.addEventListener('input', function () {
                    const password = this.value;
                    const strengthBar = document.getElementById('passwordStrength');
                    let strength = 0;

                    if (password.length >= 8) strength++;
                    if (password.match(/[a-z]/) && password.match(/[A-Z]/)) strength++;
                    if (password.match(/\d/)) strength++;
                    if (password.match(/[^a-zA-Z\d]/)) strength++;

                    strengthBar.className = 'password-strength-bar';
                    if (password.length > 0) {
                        if (strength <= 1) {
                            strengthBar.classList.add('weak');
                        } else if (strength <= 3) {
                            strengthBar.classList.add('medium');
                        } else {
                            strengthBar.classList.add('strong');
                        }
                    }
                });
            }

            const form = document.getElementById('changePwdForm');
            const submitButton = document.getElementById('submitButton');

            if (form && submitButton) {
                form.addEventListener('submit', function (e) {
                    const newPwd = document.getElementById('newPassword').value;
                    const confirmPwd = document.querySelector('[name="ConfirmPassword"]').value;

                    if (newPwd !== confirmPwd) {
                        e.preventDefault();
                        alert('Password baru dan konfirmasi password tidak cocok!');
                        return;
                    }

                    submitButton.disabled = true;
                    submitButton.classList.add('btn-loading');
                });
            }

            const inputs = document.querySelectorAll('#changePwdForm input[required]');
            inputs.forEach(input => {
                input.addEventListener('blur', function () {
                    this.classList.remove('is-valid', 'is-invalid');
                    if (this.value.trim() === '') {
                        this.classList.add('is-invalid');
                    } else {
                        this.classList.add('is-valid');
                    }
                });

                input.addEventListener('input', function () {
                    if (this.value.trim() !== '') {
                        this.classList.remove('is-invalid');
                    }
                });
            });

            setTimeout(() => {
                const firstInput = document.querySelector('#changePwdForm input[type="password"]');
                if (firstInput) firstInput.focus();
            }, 300);
        });
    </script>
}
