@model UtilitiesHR.Models.MasterSertifikasi
@{
    ViewData["Title"] = "Tambah Master Sertifikasi";
    Layout = null;
}

<style>
    .master-modal-stack {
        display: flex;
        flex-direction: column;
        max-height: calc(100vh - 140px);
    }

    .master-modal-scroll {
        flex: 1 1 auto;
        overflow-y: auto;
        padding-right: 4px;
        padding-bottom: 0.25rem;
    }

    .master-modal-actions {
        position: sticky;
        bottom: 0;
        background: var(--bg, #fff);
        border-top: 1px solid var(--line, #dee2e6);
        padding-top: 0.75rem;
        padding-bottom: calc(env(safe-area-inset-bottom, 8px) + 0.25rem);
        margin-top: 0.5rem;
        z-index: 1;
    }

    @@media (max-width: 575.98px) {
        .master-modal-stack {
            max-height: calc(100vh - 110px);
        }
    }
</style>

<div class="master-modal-stack">
    <div class="master-modal-scroll">
        <form asp-action="Create"
              method="post"
              id="ajax-form-master">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label class="form-label">Nama</label>
                    <input asp-for="Nama" class="form-control" />
                    <span class="text-danger" asp-validation-for="Nama"></span>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Kategori</label>
                    <input asp-for="Kategori" class="form-control" />
                    <span class="text-danger" asp-validation-for="Kategori"></span>
                </div>

                <div class="col-md-12">
                    <label class="form-label">Keterangan</label>
                    <input asp-for="Keterangan" class="form-control" />
                    <span class="text-danger" asp-validation-for="Keterangan"></span>
                </div>
            </div>
        </form>
    </div>

    <div class="master-modal-actions d-flex justify-content-end gap-2">
        <button type="button"
                class="btn btn-outline-secondary"
                data-bs-dismiss="modal">
            <i class="bi bi-x-lg"></i>
            <span class="d-none d-md-inline">Batal</span>
        </button>
        <button type="submit"
                class="btn btn-primary"
                form="ajax-form-master">
            <i class="bi bi-check-lg"></i>
            <span class="d-none d-md-inline">Simpan</span>
        </button>
    </div>
</div>

<script>
    $(function () {
        $.validator.unobtrusive.parse("#ajax-form-master");
    });
</script>
