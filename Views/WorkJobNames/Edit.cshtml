@model UtilitiesHR.Models.WorkJobName

@{
    Layout = null;
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="NamaPekerjaan" class="form-label small"></label>
        <input asp-for="NamaPekerjaan" class="form-control form-control-sm" />
        <span asp-validation-for="NamaPekerjaan" class="text-danger small"></span>
    </div>

    <div class="mt-3 d-flex justify-content-end gap-2">
        <button type="button" class="btn btn-sm btn-light" data-bs-dismiss="modal">
            Batal
        </button>
        <button type="submit" class="btn btn-sm btn-primary">
            Update
        </button>
    </div>
</form>
